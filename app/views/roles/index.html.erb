<h1 class="title-config"><%=t ".title" %> / <%= link_to t('.new'), new_role_path %></h1>

<table>
  <tr>
    <th></th>
    <th colspan="2"></th>
  </tr>

<% @roles.each do |role| %>
  <tr class ="<%= cycle("even", "odd") %>">
    <td class="td-title"><%= role.name %></td>
    <td><%= link_to t(:edit), edit_role_path(role) %></td>
    <td><%= link_to t(:destroy), role, :confirm => t(:confirm), :method => :delete %></td>
  </tr>
<% end %>
</table>

