<h2>Login</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email, :class=> "input_text" %><br />

  <%= f.label :password %><br />
  <%= f.password_field :password, :class => "input_text" %><br />

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :class => "input_check" %><%= f.label :remember_me, :class => "label_check" %>
  <% end -%>

  <div><%= f.submit "Enter", :class => "button" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
