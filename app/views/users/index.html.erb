<h1 class="title-config"><%=t ".title" %> 
<% if can? :create, User %>
  / <%= link_to(image_tag("novo-32.png", :title => "Cadastrar Novo Usuário"), new_user_path) %>
<% end %>
</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th colspan="2"></th>
  </tr>

    <% @users.each do |user| %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= link_to user.email, user %></td>
      <td>
        <% if current_user.name == user.name %>
          <strong><%= user.name %></strong>
        <% else %>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <% for role in user.roles %>
          <%= role.name %>
        <% end %>
      </td>
      <td><%= user.company.name %></td>
      <td><%= link_to(image_tag("editar-24.png", :title => "Editar Usuário"), edit_user_path(user)) %></td>
      <% if can? :manage, User %>
        <td><%= link_to(image_tag("apagar-24.png", :title => "Excluir Usuário"), user, :confirm => t(:confirm), :method => :delete) %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br />
