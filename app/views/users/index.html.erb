<h1 class="title-config"><%=t ".title" %> / <%= link_to t('.new'), new_user_path %></h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th colspan="2"></th>
  </tr>

    <% @users.each do |user| %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= link_to user.email, user %></td>
      <td>
        <% for role in user.roles %>
          <%= role.name %>
        <% end %>
      </td>
      <td><%= user.company.name %></td>
      <td><%= link_to image_tag("editar-24.png"), edit_user_path(user) %></td>
      <td><%= link_to image_tag("apagar-24.png"), user, :confirm => t(:confirm), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />
