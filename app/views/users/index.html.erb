<h1 class="title-config"><%=t ".title" %> / <%= link_to t('.new'), new_user_path %></h1>

<table>
  <tr>
    <th></th>
    <th colspan="2"></th>
  </tr>

  <% @users.each do |user| %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= link_to user.email, user %></td>
      <td><%= user.company.name %></td>
      <td><%= link_to t(:edit), edit_user_path(user) %></td>
      <td><%= link_to t(:destroy), user, :confirm => t(:confirm), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

