 <tr class="<%= cycle("even", "odd") %>">
    <td><%= link_to lesson.theme, course_lesson_path(@course, lesson) %></td>
    <% if can? :manage, :all %>
      <td><%= link_to(image_tag("editar-24.png", :title => "Editar"), edit_course_lesson_path(@course, lesson)) %></td>
      <td><%= link_to(image_tag("apagar-24.png", :title => "Apagar"), [lesson.course, lesson], :confirm => t(:confirm), :method => :delete) %></td>
    <% end %>
  </tr>

