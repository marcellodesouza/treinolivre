<h1 class="title-config"><%=t ".title" %> / <%= link_to t('.new'), new_category_path %></h1>

<table>
  <tr>
    <th></th>
    <th colspan="2"></th>
  </tr>

<% @categories.each do |category|  %>
  <tr class ="<%= cycle("even", "odd") %>">
    <td class="td-title"><%= category.name %></td>
    <td><%= link_to t(:edit), edit_category_path(category) %></td>
    <td><%= link_to t(:destroy), category, :confirm => t(:confirm), :method => :delete %></td>
  </tr>
<% end %>
</table>


